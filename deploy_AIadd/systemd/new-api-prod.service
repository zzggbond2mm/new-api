[Unit]
Description=New API Production Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/srv/new-api/prod/current
EnvironmentFile=/srv/new-api/prod/current/.env.prod
ExecStart=/srv/new-api/prod/current/new-api-prod --log-dir /srv/new-api/prod/current/logs --port 3000
Restart=always
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
